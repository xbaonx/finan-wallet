{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "lib": ["ES2015", "ES2017", "ES2018", "ES2019", "ES2020"],
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/presentation/*": ["src/presentation/*"],
      "@/domain/*": ["src/domain/*"],
      "@/data/*": ["src/data/*"]
    }
  }
}
