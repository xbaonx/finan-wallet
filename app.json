{
  "expo": {
    "name": "Finan",
    "slug": "finan-crypto-wallet",
    "sdkVersion": "53.0.0",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.finan.cryptowallet",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Finan Wallet sử dụng Face ID để bảo mật và xác thực truy cập vào ví tiền điện tử của bạn."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.finan.cryptowallet"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Finan Wallet sử dụng Face ID để bảo mật và xác thực truy cập vào ví tiền điện tử của bạn."
        }
      ]
    ]
  }
}
